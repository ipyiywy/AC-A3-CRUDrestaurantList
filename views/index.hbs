 <div class="banner"></div>
</header>
<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 style="float: left" class="mb-2">尋找餐廳：</h4>
        <a href="./restaurants/new" style="float: right;"><h4> + 新增餐廳</h4><div></div></a>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..." value="" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
{{# if restaurant }}
      <div class="card-columns">

{{#each restaurant}}
<a href="./restaurants/detail/{{this._id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i>{{this.category}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>
            </div>
        </a>
             <div class="card-footer" style="text-align: center;">
             <a href="/restaurants/detail/{{this._id}}/edit"><button type="button" class="btn btn-light">Edit</button></a>
             <a href="/restaurants/detail/{{this._id}}"><button type="button" class="btn btn-light">Detail</button></a>
            <form action="./restaurants/{{ this._id }}?_method=DELETE" method="POST" style="display: inline">
            <button type="submit" class="btn btn-danger">Remove</button>
            </form>
                </div>
          </div>
{{/each}}
     </div>
 {{ else }}
<p> Sorry, there is no result with {{ keyword }}.</p>
{{/if}}
   </div>
  </div>
</div>

